{
  "name": "controlup-automation-tests",
  "version": "1.0.0",
  "description": "ControlUp automation tests using Playwright TypeScript with Page Object Model",
  "main": "index.js",
  "scripts": {
    "test:ui": "npx playwright test --grep @ui-tests",
    "test:api": "npx playwright test --grep @api-tests",
    "test:firefox": "npx playwright test --project=firefox",
    "test:chromium": "npx playwright test --project=chromium",
    "test:edge": "npx playwright test --project=edge",
    "test:webkit": "npx playwright test --project=webkit",
    "test:install": "npx playwright install",
    "test:report": "npx playwright show-report"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "pom",
    "page-object-model"
  ],
  "author": "ControlUp Test Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.18.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "playwright": "^1.57.0"
  }
}
